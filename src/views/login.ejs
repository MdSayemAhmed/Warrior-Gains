    .section-login {
      width: 100%;
      height: 90vh;
      background-color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-evenly;
      background-color: green;
    }

    .section-login-heading {
      font-size: 6rem;
      font-weight: 700;
      color: yellow;
      background-color: green;
      padding: 0 3rem;
      margin-bottom: 5rem;
      text-transform: uppercase;
      letter-spacing: 1rem;
      border-bottom: 0.3rem solid #fff;
      text-shadow: 0.2rem 0.2rem 1rem #555;
      transform: skew(-10deg); 
    }

    .login-form {
      width: 50rem;
      flex-direction: column;
      display: flex;
    }

    .login-form input,
    .login-form textarea {
      width: 100%;
      padding: 0.5rem;
      margin: 0.5rem 0;
      background-color: gainsboro;
      font-size: 1.5rem; 
      border: 0.2rem solid green;
      color: #555;
      display: flex;
    }

    .login-form textarea {
      height: 10rem;
      max-height: 15rem;
      max-width: 100%;
      display: flex;
    }

    #login-form-btn {
      background-color: green;
      color: yellow;
      text-transform: uppercase;
      letter-spacing: 1rem;
      cursor: pointer;
      justify-content: center;
      display: flex;
      border-color: green;

    }
