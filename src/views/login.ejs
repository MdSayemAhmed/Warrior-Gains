  <div class="section-login">
    <h1 class="section-login-heading">Login</h1>

            <!--POST request to /login route -->
            <form action="/login" method="POST">
              <div class="login-form">
                <!--<label for="email">Email</label>-->
                <input type="email" class="form-control" name="username" placeholder="Email">
              </div>
              <div class="login-form">
                <!--<label for="password">Password</label>-->
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" id="login-form-btn">Login</button>
            </form>

          </div>
        </div>
      </div>

    </div>
  </div>

  <style>
    /*This contains style for body*/
    body {
      background-color: gainsboro;
    }

    /*This contains style for background*/
    .section-login {
      width: 100%;
      height: 70vh;
      background-color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-evenly;
      background-color: gainsboro;
    }

    /*This contains style for "Login" */
    .section-login-heading {
      font-size: 3rem;
      font-weight: 700;
      color: forestgreen;
      /*background-color: green;*/
      padding: 0 1rem;
      margin-bottom: -4rem;
      text-transform: uppercase;
      letter-spacing: 1rem;
      /*border-bottom: 0.3rem solid #fff;
      text-shadow: 0.2rem 0.2rem 1rem #555;*/
      transform: skew(-10deg); 
    }

    /*This contains style for login forms*/
    .login-form {
      width: 25rem;
      flex-direction: column;
      display: flex;
    }

    /*This contains style for login forms input, textarea*/
    .login-form input,
    .login-form textarea {
      width: 100%;
      padding: 0.5rem;
      margin: 0.5rem 0;
      background-color: gainsboro;
      font-size: 1.5rem; 
      border: 0.2rem solid forestgreen;
      color: #555;
      display: flex;
    }

    /*This contains style for login textarea*/
    .login-form textarea {
      height: 10rem;
      max-height: 15rem;
      max-width: 100%;
      display: flex;
    }

    /*This contains style for login button*/
    #login-form-btn {
      background-color: forestgreen;
      color: gainsboro;
      text-transform: uppercase;
      letter-spacing: 1rem;
      cursor: pointer;
      justify-content: center;
      /*display: flex;*/
      border-color: gainsboro;
      /*left: 50%;*/
      margin: 0;
      position: absolute;
      top: 55%;
      left: 50%;
      -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);

    }
  </style>


