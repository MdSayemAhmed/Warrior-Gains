        }

        /*This contains style for register forms*/
        .register-form {
            width: 25rem;
            flex-direction: column;
            display: flex;
        }

        /*This contains style for register forms input and text area*/
        .register-form input,
        .register-form textarea {
            width: 100%;
            padding: 0.5rem;
            margin: 0.5rem 0;
            background-color: gainsboro;
            font-size: 1.5rem; 
            border: 0.2rem solid forestgreen;
            color: #555;
            display: flex;
            /*float: left;*/
        }

        /*This expands input for register textarea styling*/
        .register-form textarea {
            height: 10rem;
            max-height: 15rem;
            max-width: 100%;
            display: flex;
        }

        /*This contains styling for register button*/
        #register-form-btn {
            background-color: forestgreen;
            color: gainsboro;
            text-transform: uppercase;
            letter-spacing: 1rem;
            cursor: pointer;
            justify-content: center;
