    <style>
        /*This contains style for body*/
        body {
            background-color: gainsboro;
        }

        /*This contains style for background*/
        .section-register {
            width: 100%;
            height: 100vh;
            background-color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
            background-color: gainsboro; 
        }

        /*This contains style for "Join Warrior Gains"*/
        .section-register-heading {
            font-size: 3rem;
            font-weight: 700;
            color: forestgreen;
